{
  "manifest_version": 2,

  "name": "Quick Quotes",
  "description": "Select and save quotes from the internet as well as a link to them.",
  "version": "1.0",

  "icons": {
    "16": "icon.png"
  },

  "browser_action": {
    "default_icon": "icon.png"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["findQuote.js"]
    }
  ],

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "permissions": [
    "activeTab",
    "storage",
    "contextMenus",
    "tabs",
    "<all_urls>"
  ]
}
